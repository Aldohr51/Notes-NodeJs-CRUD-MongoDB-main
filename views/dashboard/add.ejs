<!-- Este es un formulario para agregar una nueva nota. -->

<div class="container-fluid container-fluid-custom pb-5 mb-5">

  <!-- Sección del breadcrumb para mostrar la navegación y la ubicación del usuario -->
  <div class="row mb-4">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard">Tablero de notas</a></li>
          <li class="breadcrumb-item active">Agregar Nota</li>
        </ol>
      </nav>
      <div class="col d-flex justify-content-between align-items-center">
        <h1 class="h3">Agregar Nota</h1>
      </div>
    </div>
  </div>

  <!-- Formulario para agregar la nota -->
  <form action="/dashboard/add" method="POST" class="position-relative">
    <!-- Campo para el título de la nota -->
    <div class="form-group mb-4 position-absolute" style="left:1px; top:1px; right: 1px;">
      <input type="text" class="form-control fw-bold border-0 fs-4" id="title" name="title" placeholder="Titulo" required>
    </div>

    <!-- Campo para el cuerpo o contenido de la nota -->
    <div class="form-group mb-4">
      <textarea required class="form-control pt-5 fs-4" id="body" name="body" placeholder=" Escribe tu nota..." rows="12"></textarea>
    </div>

    <!-- Botón para enviar el formulario y agregar la nota -->
    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-lg">Agregar Nota</button>
    </div>

  </form>

</div>
